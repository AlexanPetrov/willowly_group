# Environment Configuration Template
# Copy this to .env.prod and fill in your production values
# Never commit .env.prod to git!

# Environment
APP_ENV=production

# Database - Production
DB_URL=postgresql+asyncpg://username:password@host:5432/database_name

# CORS - Production frontend URLs
CORS_ORIGINS=https://yourdomain.com

# JWT Authentication
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=15

# Logging
LOG_LEVEL=INFO
LOG_FILE=None
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_BATCH=10/minute
RATE_LIMIT_WRITE=60/minute
RATE_LIMIT_READ=100/minute

# Redis Cache
REDIS_URL=redis://redis-host:6379/0
CACHE_TTL=600
CACHE_ENABLED=true

# Metrics - Prometheus monitoring
ENABLE_METRICS=true
