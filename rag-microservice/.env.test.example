# Test Environment Configuration
APP_ENV=test
LOG_LEVEL=WARNING

# Security (test keys - isolated from dev/prod)
SECRET_KEY=test-secret-key-minimum-32-characters-long-for-rag-tests
JWT_SECRET_KEY=test-jwt-secret-key-minimum-32-chars
JWT_ALGORITHM=HS256

# CORS - minimal for tests
ALLOWED_ORIGINS=http://localhost:3000

# ChromaDB - temporary test database
CHROMA_PATH=/tmp/test_chroma_db
CHROMA_COLLECTION_NAME=test_collection
CHROMA_DISTANCE=cosine

# Retrieval settings
RETRIEVAL_K=2
MIN_SIMILARITY=0.65

# LLM settings - mocked in tests
OLLAMA_HOST=http://localhost:11434
GEN_MODEL=llama3.1:8b
NUM_CTX=4096
NUM_PREDICT=512
TEMPERATURE=0.25

# Monitoring
ENABLE_METRICS=true
